{
  "name": "arthur",
  "version": "2.0.0",
  "description": "ARTHUR Media Production CLI - TypeScript/Bun Implementation",
  "type": "module",
  "main": "src/cli.ts",
  "bin": {
    "arthur": "src/cli.ts"
  },
  "scripts": {
    "cli": "bun run src/cli.ts",
    "dev": "bun --watch src/cli.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "build": "bun build src/cli.ts --outdir dist --target bun"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "zod": "^3.23.8",
    "chalk": "^5.3.0",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.6.3"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "author": "Arthur Dell",
  "license": "MIT",
  "repository": {
    "type": "git",
    "directory": "arthur-ts"
  }
}
